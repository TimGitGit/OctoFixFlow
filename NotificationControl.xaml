<UserControl
    x:Class="OctoFixFlow.NotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OctoFixFlow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        ShadowDepth="0"
                        Color="#40000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InfoStyle" TargetType="Border">
            <Setter Property="Background" Value="#2196F3" />
        </Style>

        <Style x:Key="WarnStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF9800" />
        </Style>

        <Style x:Key="ErrorStyle" TargetType="Border">
            <Setter Property="Background" Value="#F44336" />
        </Style>

        <PathGeometry x:Key="InfoIcon" Figures="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M13,17H11V11H13V17M13,9H11V7H13V9Z" />
        <PathGeometry x:Key="WarnIcon" Figures="M12,2L1,21H23M12,6L19.5,19H4.5M12,10V14M12,16V18" />
        <PathGeometry x:Key="ErrorIcon" Figures="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M15.5,8C16.33,8 17,8.67 17,9.5C17,10.33 16.33,11 15.5,11C14.67,11 14,10.33 14,9.5C14,8.67 14.67,8 15.5,8M8.5,8C9.33,8 10,8.67 10,9.5C10,10.33 9.33,11 8.5,11C7.67,11 7,10.33 7,9.5C7,8.67 7.67,8 8.5,8M6.89,17C7.69,14.96 9.67,13.5 12,13.5C14.33,13.5 16.31,14.96 17.11,17H6.89Z" />
    </UserControl.Resources>

    <Border
        x:Name="NotificationBorder"
        Height="50"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        RenderTransformOrigin="0.5,0.5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Path
                x:Name="IconPath"
                Grid.Column="0"
                Width="24"
                Height="24"
                Margin="15,0,15,0"
                Data="{StaticResource InfoIcon}"
                Fill="White"
                Stretch="Uniform" />

            <TextBlock
                x:Name="MessageText"
                Grid.Column="1"
                Margin="0,0,15,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                TextWrapping="Wrap" />
        </Grid>
    </Border>
</UserControl>